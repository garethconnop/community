%div.container.form-container
  %div.eight
    %h2 Sign up

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true }) do |f|
      = devise_error_messages!

      = f.label :username, required: false
      = f.text_field :username, autofocus: true

      = f.label :email, :novalidate => "novalidate"
      = f.email_field :email

      = f.label :password
      - if @validatable
        %em
          = @minimum_password_length
          characters minimum
        = f.password_field :password, autocomplete: "off"  

      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", :class => "last-input"

      %div.form-actions
        = f.submit "Sign up"